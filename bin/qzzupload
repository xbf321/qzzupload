#!/usr/bin/env node

'use strict';

var program = require('commander');
program
    .version(require('../package').version)
    .usage('<command> [options]');

program
    .command('go')
    .description('上传图片')
    .option('-r, --recursive', '扫描当前文件下所有图片')
    .action((cmd) => {
        require('../lib/go')(cmd)
    });

program.parse(process.argv);

if (!process.argv.slice(2).length) {
    program.outputHelp();
}